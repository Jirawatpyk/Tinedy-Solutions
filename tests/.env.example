# Tinedy CRM Test Environment Configuration
# Copy this file to .env in the tests/ directory and fill in your values

# Test Environment
TEST_ENV=local

# Application URLs
BASE_URL=http://localhost:5173
API_URL=http://localhost:5173

# Supabase Configuration (required for test data factories)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Alternative Supabase env var names (if not using VITE_ prefix)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_ANON_KEY=your_supabase_anon_key

# Test User Credentials (for E2E login tests)
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=

TEST_MANAGER_EMAIL=manager@test.com
TEST_MANAGER_PASSWORD=

TEST_STAFF_EMAIL=staff@test.com
TEST_STAFF_PASSWORD=

# Test Data (optional - factories will generate if not provided)
TEST_CUSTOMER_ID=
TEST_SERVICE_PACKAGE_ID=
TEST_TEAM_ID=

# Feature Flags (if applicable)
FEATURE_FLAG_NEW_UI=true
FEATURE_FLAG_PAYMENT_GATEWAY=false

# Performance Testing (optional)
PERF_TEST_ENABLED=false
PERF_TEST_ITERATIONS=10

# CI/CD Configuration
CI=false
